## Target platform
platform :ios, '9.0'

## External source
source 'https://github.com/CocoaPods/Specs.git'

target 'My-Simple-Instagram' do

  use_frameworks!

  #Database
  pod 'RealmSwift'

  #Networking
  pod 'Moya'

  #Images
  pod 'Kingfisher'

  #Utilities
  pod 'SwiftyJSON'

  #Graphics
  pod 'Cards'
  
  target 'My-Simple-InstagramTests' do
    inherit! :search_paths
    # Pods for testing
  end

end